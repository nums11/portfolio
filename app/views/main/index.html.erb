<!-- JAVASCRIPT -------------------------------------------->

<script type="text/javascript">

	/*Title Section-----------------------------------*/

	//Set title section container height to window height
	$("#titlesection-container").height($(window).height());

	//Navigation links
	$(".link").mouseenter(function(){
		$(this).animate({"color": "#4dff88"}, 250);
  	});

	$(".link").mouseleave(function(){
		$(this).animate({"color": "black"}, 250);
	});

	//Social Media Linls
	$(".smlink").mouseenter(function(){
		$(this).animate({"width":"100%"}, 250);
	});

	$(".smlink").mouseleave(function(){
		$(this).animate({"width":"60%"}, 250);
	});

	//Name animations
	$(".letter").mouseenter(function(){
		$(this).animate({"font-size":"150px", "color":"#ff6666"}, 250);
	});

	$(".letter").mouseleave(function(){
		$(this).animate({"font-size":"140px", "color":"black"}, 250);
	});


	/*About Section-----------------------------------*/

	//Set about section container height
	// $("#aboutsection-container").height($(window).height());


	//Maintain container heights when window is resized
	$(window).resize(function(){
		$("#titlesection-container").height($(window).height());
		// $("#aboutsection-container").height($(window).height());
	});
	$(window).trigger('resize');

	//Tag cloud
	var tagcloud_height = $("#tagcloud").height();
	var tagcloud_width = $("#tagcloud").width();
	var settings = {
		//height of sphere container
		height: tagcloud_height, 
		//width of sphere container
		width: tagcloud_width, 	
		//radius of sphere
		radius: 250,
		//rotation speed
		speed: 0.5,
		//sphere rotations slower
		// slower: 0.9,
		// //delay between up<a href="https://www.jqueryscript.net/		time-clock/">date</a> position
		// timer: 5,
		// //dependence of a font size on axis Z
		// fontMultiplier: 15,
		// //tag css stylies on mouse over
		// hoverStyle: {
		// border: 'none',
		// color: '#4dff88'
		// },
		// //tag css stylies on mouse out
		// mouseOutStyle: {
		// border: '',
		// color: ''
		// }
	};
	$('#tagcloud').tagoSphere(settings);

	/*Portfolio Section---------------------------------*/

	//project cover scritpts
	$(".projectcover").mouseenter(function(){
		$(this).fadeTo(250, 0.9);
	});

	$(".projectcover").mouseleave(function(){
		$(this).fadeTo(250, 0.0);
	});

	$(".learn-more").mouseenter(function(){
		$(this).animate({"background-color": "#4dff88",}, 250);
		$(this).css({"color": "black"});		
	});

	$(".learn-more").mouseleave(function(){
		$(this).animate({"background-color": "#737373",}, 250);
		$(this).css({"color": "white"});		
	});

	//project popup scripts

	$(".view-site").mouseenter(function(){
		$(this).animate({"background-color":"white"}, 250);
		$(this).css({"color":"#4dff88"});
	});

	$(".view-site").mouseleave(function(){
		$(this).animate({"background-color":"#4dff88"}, 250);
		$(this).css({"color":"black"});
	});

	$("#page-cover").height($(window).height());
	$("#page-cover").width($(window).width() - 2);

	$("#focus-learn-more").click(function(){
		$("#focus-popup").show("scale", 250);
		$("#page-cover").show();
	});

	$("#page-cover").click(function(){
		$(".projectinfo-container").hide("scale", 250);
		$("#page-cover").hide();
	});

	$("#focus-link").click(function(){
		var win = window.open("https://play.google.com/store/apps/details?id=com.games.numsm_000.focus");
		if (win) {
		    //Browser has allowed it to be opened
		    win.focus();
		} else {
		    //Browser has blocked it
		    alert('Please allow popups for this website');
		}
	});

	/*Contact Section---------------------------------*/

	$(".contact-info").focus(function(){
		$(this).animate({borderBottomColor:"#4dff88"}, 250);
	});

	$(".contact-info").focusout(function(){
		$(this).animate({borderBottomColor:"#808080"}, 250);
	});

	// $("#message-area").focus(function(){
	// 	$(this).animate({borderColor:"#4dff88"},250);
	// });

	$("#submit-btn").mouseenter(function(){
		$("#submit-btn").animate({"background-color":"#4dff88"}, 250);
		$("#submit-btn").css("color","black");
	});

	$("#submit-btn").mouseleave(function(){
		$("#submit-btn").animate({"background-color":"#404040"}, 250);
		$("#submit-btn").css("color","white");
	});

</script>