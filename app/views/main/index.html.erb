  			<a class="left carousel-control" href="#focus-carousel" data-slide			="prev">
  			  <span class="glyphicon glyphicon-chevron-left"></span>
  			  <span class="sr-only">Previous</span>
  			</a>
  			<a class="right carousel-control" href="#focus-carousel" 			data-slide="next">
