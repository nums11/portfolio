		<!-- Image Carousel -->
		<div id="focus-carousel" class="carousel slide" data-ride="carousel">
  			<!-- Indicators -->
  			<ol class="carousel-indicators">
  			  <li data-target="#focus-carousel" data-slide-to="0" class="			active"></li>
  			  <li data-target="#focus-carousel" data-slide-to="1"></li>
